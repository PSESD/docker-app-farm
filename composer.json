{
    "name": "canis/docker-app-farm",
    "description": "Docker Application Farm, with WordPress built in",
    "keywords": [
        "wordpress",
        "canis",
        "docker",
        "management",
        "yii"
    ],
    "homepage": "http://canis.io",
    "type": "project",
    "minimum-stability": "dev",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Jacob Morrison",
            "email": "jacob@canis.io",
            "homepage": "http://canis.io"
        }
    ],
    "require": {
        "canis/docker-app-farm-lib": "*",
        "psesd/docker-app-farm-psesd": "*"
    },
    "require-dev": {
        "yiisoft/yii2-gii": "2.0.*",
        "yiisoft/yii2-debug": "2.0.*",
        "canis/yii2-doc-helper": "*"
    },
    "repositories": [
        {
            "type": "vcs",
            "url":  "https://github.com/PSESD/docker-app-farm-psesd.git"
        },
        {
            "type": "vcs",
            "url":  "https://github.com/jom/php-docker-react.git"
        }
    ],
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "web/assets": "0777",
                    "bin/yii": "0755"
                }
            ]
        },
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "yii\\composer\\Installer::postCreateProject"
        ],
        "post-install-cmd": [
            "yii\\composer\\Installer::postCreateProject"
        ]
    }
}
